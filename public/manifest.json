{
  "name": "Markbook",
  "description": "Content social media",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Markbook"
  },
  "chrome_url_overrides": {
    "newtab": "./index.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "omnibox": {
    "keyword": "mark"
  },
  "permissions": [
    "tabs",
    "storage",
    "history",
    "identity",
    "identity.email",
    "bookmarks",
    "search"
  ],
  "icons": {
    "16": "markbook-icon.png",
    "48": "markbook-icon.png",
    "128": "markbook-icon.png"
  }
}